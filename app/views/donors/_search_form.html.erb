<!--form to build filter/sort options-->
<%= form_tag({controller: "donors", action: "index"}, method: :get) do %>
  <div class="row form-group">
    <div class="col-xs-3">
      <div class="line-break">
        <p>Timeframe (Last Donation)</p>
      </div>
      <%= select_tag(:timeframe, options_for_select(Donor::TIMES), class: 'form-control input-sm') %>
    </div>
    <div class="col-xs-3">
      <div class="line-break">
        <p>Sort By</p>
      </div>
      <%= select_tag(:sortby, options_for_select(Donor::SORTS), include_blank: " ", class: 'form-control input-sm') %>
    </div>
    <div class="col-xs-3">
      <div class="line-break">
        <p>Donors Per Page</p>
      </div>
      <%= select_tag(:pageby, options_for_select(Donor::PAGEBY), class: 'form-control input-sm') %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-xs-2">
      <%= submit_tag 'Filter', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>