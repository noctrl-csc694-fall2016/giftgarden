<div class="container">
    <div class="row">
     <div class="col-md-8 col-md-offset-2 col-xs-12 well">
            <div class='col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 '>
            <h2>User Settings <small>&nbsp; Change your password.</small></h2>
            <%= form_for (current_user), html: {class: ""} do |f| %>
                <br />
                <b>
                    <h5>Username:
                        <%= current_user.username %></h5>
                    <h5>Email:
                        <%= current_user.email %></h5>
                </b>
                <br />
                <div class="form-group">
                <%= f.label :password, "New Password:     "%>
                <%= f.password_field :password, class: 'form-control' %>
                </div>

                <div class="form-group">
                <%= f.label :password_confirmation, "Confirm:     " %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 text-center">
                    <%= f.submit "Change Password", class: "btn btn-success btn-wide" %>
                    <%= link_to "Cancel", home_path, class: "btn btn-danger btn-wide" %>
                </div>
                    </div>
            <% end %>
    </div>
            </div>
    </div>
</div>