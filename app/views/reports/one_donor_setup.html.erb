<% provide(:title, "One Donor Report") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
    <div class="page-header">
      <h2>One Donor Report <small>
      The report lists the contact information and Gifts from the selected Donor</small></h2>
  	</div>
  </div>
</div>

<!-- Form Content -->
<%= form_tag '/report-one-donor-pdf', multipart:true do %>

  <section class='report-container'>
    <div class='report-left-half'>
      <span class='report-tab'>Donor:</span><br />
      <%= select_tag "donor", options_from_collection_for_select(@donors, "id", "full_name") %>
    </div>
  </section>
  <br />
  
  <div class="report-submit">
    <%= submit_tag "Generate Report", class: "btn btn-success" %>
    &nbsp;
    <%=link_to "Cancel", reports_url, class: "btn btn-warning" %>
  </div>
<% end %>
<!-- end Form Content -->

<!-- Allows Report button to be used repeatedly, and resets the form. -->
<script>
  $(document).ready(function(){
    $("input.btn.btn-success").removeAttr("data-disable-with")
    $("input.btn.btn-success").click(function(){
        $("form")[0].reset();
    });
});
</script>

