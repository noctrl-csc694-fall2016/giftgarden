<% provide(:title, "LYBUNT Report") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
    <div id="flash"></div>
    <div class="page-header">
     <h2>Donors Report <small>&nbsp;
      All Donors who gave last year but unfortunately not this year are saved to a PDF file: <br />
      <b>LYBUNT Report <%= Time.now.to_date.to_s %>.pdf</b></small></h2>
    </div>
  </div>
</div>

<!-- Content -->
<%= form_tag '/lybunt-donors-pdf', multipart:true do %>

  <section class='report-container'>
    <div class="report-left-half">
      <span class='report-tab'>Sort By:</span><br />
      <%= select_tag 'sorts', options_for_select(Donor::SORTS) %>
    </div>
  </section>
  
  <section class='report-container'>
    <div class="report-left-half">
      <br />
      <span class='report-tab'>Timeframe:</span><br />
      <%= select_tag 'times', options_for_select(Donor::TIMES) %>
    </div>
    <div class="report-right-half">
      <br />
      <br />
      <%= check_box_tag 'landscape', 'yes', false %>
      <%= label_tag(:landscape, "Full Contact") %>
    </div>
  </section><br /><br />
  
  <div class="report-submit">
    <%= submit_tag "Report", class: "btn btn-success" %>
    &nbsp;
    <%=link_to "Cancel", reports_url, class: "btn btn-warning" %>
  </div>

<% end %>

<script>
  //allows Report button to be used repeatedly, and resets the form
  var reportButton = $("input.btn.btn-success");
  $(document).ready(function(){
    reportButton.removeAttr("data-disable-with")
    reportButton.click(function(){
      $("form")[0].reset();
      //register event listener for flash() on Report button
      flash();
    });
  });

  //flash notification for report generation
  var flashdiv = document.getElementById('flash');
  function flash(){
    if ($("#flash").html().length > 0) {
      $("#flash").fadeOut();
      $("#flash").fadeIn();
    } else {
      flashdiv.className = "alert alert-success";
      flashdiv.innerHTML =  "Donors report generated."; 
    }
  }
</script>
