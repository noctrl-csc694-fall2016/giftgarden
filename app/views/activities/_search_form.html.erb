<!--form to build filter/sort options-->
<%= form_tag({controller: "activities", action: "index"}, method: :get) do %>
  <div class="row form-group">
    <div class="col-xs-3">
      <div class="line-break">
        <p>Timeframe</p>
      </div>
      <%= select_tag(:timeframe, options_for_select(Activity::TIMES, params[:timeframe]), class: 'form-control input-sm') %>
    </div>
    <div class="col-xs-3">
      <div class="line-break">
        <p>Sort By</p>
      </div>
      <%= select_tag(:sortby, options_for_select(Activity::SORTS, params[:sortby]), class: 'form-control input-sm') %>
    </div>
    <div class="col-xs-3">
      <div class="line-break">
        <p>Activities Per Page</p>
      </div>
      <%= select_tag(:pageby, options_for_select(Activity::PAGEBY, params[:pageby]), class: 'form-control input-sm') %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-xs-2">
      <%= submit_tag 'Filter', class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="line-break explaination">
        The timeframe filter applies to the end date of the activity.
      </div>
    </div>
  </div>
<% end %>