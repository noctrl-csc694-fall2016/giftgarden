<% provide(:title, "Surf Activities") %>
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
  	<div class="page-header">
  		<h2>Surf Activities <small>&nbsp; Select a row to view or edit that activty.</small></h2>
  		<aside class="text-right">
  		  <%= link_to(new_activity_path) do %>
			    <span class="glyphicon glyphicon-plus icon-donna icon-donna-new"></span><span class="icon-donna-text">New Activity</span>
		    <% end %>
  		  <div>
      		Surf to: 
      		  <%=link_to "All Donors", donors_url %>
          	<%=link_to "All Gifts", gifts_url + "?activity_id=&donor_id=&commit=GO" %>
        </div>
  		</aside>
  	</div>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <% if @activities.count != 0 %>
    <table class="table table-striped table-hover table-bordered table-responsive">
      <thead>
        <tr>
          <td>Name</td>
          <td>End Date</td>
          <td>Goal</td>
          <td>Progress</td>
          <td>Donors</td>
          <td>Gifts</td>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity| %>
        <tr>
          <td><%= link_to activity.name, edit_activity_path(activity) %></td>
          <td><%= activity.end_date %></td>
          <td><%= number_to_currency(activity.goal) %></td>
          <td><%= progress(activity) %>%</td>
          <td><%= link_to donor_count_per_activity(activity), "/gifts?activity_id=" + activity.id.to_s + "&donor_id=&commit=GO" %></td>
          <td><%= link_to gift_count_per_activity(activity), "/gifts?activity_id=" + activity.id.to_s + "&donor_id=&commit=GO" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <h3>No activities yet.</h3>
    <% end %>
  </div>
</div>