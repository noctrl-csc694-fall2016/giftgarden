<script>
  /*
  <!-- My source for this nice implementation of a Bootstrap collapsible panel is: -->
  <!-- http://www.bootply.com/89084 -->  
  */
  $(function () {
  	$('.collapse').on('shown.bs.collapse', function(){
  	$(this).parent().find(".glyphicon-plus").removeClass("glyphicon-plus").addClass("glyphicon-minus");
  	}).on('hidden.bs.collapse', function(){
  	$(this).parent().find(".glyphicon-minus").removeClass("glyphicon-minus").addClass("glyphicon-plus");
  	});
  });
  $(function() {

  /* Shorten the banner on scroll */
  $(window).scroll(function() {
    var x = $(window).scrollTop();
    if (x >= 60) {
      $(".navbar-brand-image").hide();
      $( ".navbar-brand-text" ).replaceWith( "<h1 class=\"navbar-brand-text\">Donna Donor</h1>" );
      $(".navbar-donna").css("height", "60px");
      $(".navbar-donna-brand").css("padding", "0px");
      $(".navbar-donna-search").css("margin-top", "5px");
    } else {
      $(".navbar-brand-image").show();
      $( ".navbar-brand-text" ).replaceWith( "<h1 class=\"navbar-brand-text\">Donna<span class=\"line-break\">Donor</span></h1>" );
      $(".navbar-donna").css("height", "120px");
      $(".navbar-donna-brand").css("padding", "15px");
      $(".navbar-donna-search").css("margin-top", "40px");
    }
  });

});
</script>