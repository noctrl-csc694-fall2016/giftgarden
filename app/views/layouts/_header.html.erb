      <%= link_to root_path, class: "navbar-brand navbar-brand-image" do %><%= image_tag("tulips-logo.gif", height: "118",  alt: "Gift Garden Logo") %><% end %>
      <% end %>
      <div class="navbar-brand navbar-donna-brand">
