<% provide(:title, "Import Donors or Gifts") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class='import-header'>
  		<h2 class="import-color">Import <small>&nbsp; transfer Donors or Gifts to Gift Garden from a .csv file.</small></h2>
  	</div>
  </div>
</div>
  
  <!-- Content -->
  <br />
  <div id='import-sides'>
    <div id='import-donors'>
    <h4>Donors</h4>
      <div id='donorsImportDiv' class='import-html import-export-label'>
		    <%= form_tag import_donors_path, multipart: true do %>
		    <span class='import-export-label'>Choose a file to import Donors.</span>
		    <br /><br />
        <%= file_field_tag :file %>
        <br />
        <%= submit_tag "Import Donors from CSV" %>
  	    <% end %>
      </div>
      <br /><br /><br /><br />
    <%=link_to "Cancel", import_export_url, class: "btn btn-warning" %>
    </div>
    <div id='import-gifts'>
      <h4>Gifts</h4>
        <div class='import-export-label'>
  		    <%= form_tag import_gifts_path, multipart:true do %>
  			  <span class='import-export-label'>Choose Activity:</span>
  			  <%= select_tag "activity",
  			  options_from_collection_for_select(@activities, "id", "name") %>
  			  <!--%= select :activity,  options_for_select(@activities.sort!, :id), "Select an activity", class:'form-control input-sm dropdown-menu' %-->
  			  <br /><br />
  			
  			  <%= file_field_tag :file %>
  			
	        <br />
	        <%= submit_tag "Import Gifts from CSV" %>
    	    <% end %>
    	  </div>
    </div>
  </div>
  