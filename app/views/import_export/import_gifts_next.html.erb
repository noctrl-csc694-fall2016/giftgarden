<% provide(:title, "Import Gifts") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class='import-header'>
  		<h2 class="import-color">Import Gifts <small>&nbsp; Validate the data and import gifts</small></h2>
  	</div>
  </div>
</div>

<!-- Content -->
<div class="row">
  <%= form_tag import_gifts_validate_path, multipart:true do %>
    <div class="row form-group">
      <div class="col-sm-4 col-xs-offset-2">
        <div class="line-break">
  			 <p>Activity</p>
  		  </div>
  		  <%= select_tag "activity", options_from_collection_for_select(@activities, "id", "name") %>
      </div>
      
      <div class="col-sm-4">
        <div class="line-break">
          <p>Select a file:</p>
        </div>
        <%= file_field_tag :file %>
      </div>
    </div>
    
    <div class=" row form-group">
      <div class="col-xs-8 col-xs-offset-1 text-center">
        <%= submit_tag "Import", class: "btn btn-success" %>
        &nbsp;
        <%=link_to "Cancel", import_export_path, class: "btn btn-warning" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function(){
    $("input.btn.btn-success").removeAttr("data-disable-with")
    $("input.btn.btn-success").click(function(){
        $("form")[0].reset();
    });
});
</script>