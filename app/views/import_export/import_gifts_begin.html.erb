<% provide(:title, "Import Gifts Begin") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class='import-header'>
  		<h2 class="import-color">Import Gifts CSV <small>&nbsp; Import Gifts from a CSV file.</small></h2>
  	</div>
  </div>
</div>

<!-- Content -->
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
    <h4>Instruction here</h4>
  </div>
</div>

<div class="row">
  <%= form_tag import_gifts_validate_path, :method => 'post', multipart:true do %>
    <div class="row form-group">
      <div class="col-sm-4 col-xs-offset-2">
        <div class="line-break">
  			 <p>Activity</p>
  		  </div>
  		  <%= select_tag "activity", options_from_collection_for_select(@activities, "id", "name") %>
      </div>
      
      <div class="col-sm-4">
        <%= file_field_tag :file %>
        <%= file_field_tag :outputfile %>
      </div>
    </div>
    
    <div class=" row form-group">
      <div class="col-xs-8 col-xs-offset-1 text-center">
        <%= submit_tag "Begin Import", class: "btn btn-success" %>
        &nbsp;
        <%=link_to "Cancel", '/import-export', class: "btn btn-warning" %>
      </div>
    </div>
  <% end %>
</div>