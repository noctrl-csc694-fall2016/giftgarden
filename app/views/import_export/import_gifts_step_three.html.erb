<% provide(:title, "Import Gifts Step Three") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class='import-header'>
  		<h2 class="import-color">Final Step<small>&nbsp; Upload your file to import gifts.</small></h2>
  	</div>
  </div>
</div>

&nbsp;
<div class="row">
  <%= form_tag import_gifts_download_csv_template_path, multipart:true do %>
    <div class="row form-group">
      <div class="col-sm-4 col-xs-offset-2">
        <div class="line-break">
          <p>Select a file:</p>
        </div>
        <%= file_field_tag :file %>
      </div>
    </div>
    &nbsp;
    <div class=" row form-group">
      <div class="col-xs-8 col-xs-offset-1 text-center">
        <%= submit_tag "Import", class: "btn btn-success" %>
        &nbsp;
        <%=link_to "Back to inst", import_gifts_inst_path, class: "btn btn-warning" %>
      </div>
    </div>
  <% end %>
</div>