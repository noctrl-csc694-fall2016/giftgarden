<% provide(:title, "Import Gifts Step Three") %>
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
  	<div class='import-header'>
  		<h2 class="import-color">Final Step<small>&nbsp; Select an activity and upload your validated file to import gifts.</small><%= image_tag("icons/flower3_square.png", height: "48",  alt: "Users", class: "pull-right hidden-xs") %></h2>
  	</div>
  </div>
</div>

&nbsp;
<div class="activity-text row">
  <%= form_tag import_gifts_import_path, multipart:true do %>
    <div class="row form-group">
      <div class="col-sm-8 col-xs-offset-2">
        <ol>
          <li>Choose an activity.</li>
          <li>Upload your file.</li>
          <li>Click "Import" to import gifts.</li>
          <li>Any gift that is not successfully imported will be listed in a CSV file named "not_imported_gifts_date.csv".</li>
        </ol>
      </div>
    </div>
    <div class="row form-group margin-left-10">
      <div class="col-sm-4 col-xs-offset-2">
        <div class="line-break">
  			  <p>Activity</p>
  		  </div>
  		  <%= select_tag "activity", options_from_collection_for_select(@activities, "id", "name"), include_blank: "Select an activity", class: 'form-control' %>
      </div>
      
      <div class="col-sm-4">
        <div class="line-break">
          <p>Select a file:</p>
        </div>
        <%= file_field_tag :file %>
      </div>
    </div>
    &nbsp;
    <div class=" row form-group">
      <div class="col-xs-8 col-xs-offset-1 text-center">
        <%= submit_tag "Import", class: "btn btn-success" %>
        &nbsp;
        <%=link_to "Cancel", import_gifts_inst_path, class: "btn btn-warning" %>
      </div>
    </div>
  <% end %>
</div>