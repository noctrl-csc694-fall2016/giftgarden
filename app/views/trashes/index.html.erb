<% provide(:title, "Trash Report") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
    <div id="flash"></div>
    <div class="page-header">
      <h2>Trash Report <small>&nbsp; Generate a pdf file with all deleted gifts, activities, and donors.</small></h2>
  	</div>
  </div>
</div>

<%= form_tag '/trashes-trash-pdf', multipart:true do %>
  <div class="report-submit">
    <%= submit_tag "Generate Report", class: "btn btn-success" %>
    &nbsp;
    <%=link_to "Cancel", reports_url, class: "btn btn-warning" %>
  </div>
<% end %>

<script>
  //allows Report button to be used repeatedly, and resets the form
  var reportButton = $("input.btn.btn-success");
  $(document).ready(function(){
    reportButton.removeAttr("data-disable-with")
    reportButton.click(function(){
      $("form")[0].reset();
      //register event listener for flash() on Report button
      flash();
    });
  });

  //flash notification for report generation
  var flashdiv = document.getElementById('flash');
  function flash(){
    if ($("#flash").html().length > 0) {
      $("#flash").fadeOut();
      $("#flash").fadeIn();
    } else {
      flashdiv.className = "alert alert-success";
      flashdiv.innerHTML =  "Trash report generated."; 
    }
  }
</script>

