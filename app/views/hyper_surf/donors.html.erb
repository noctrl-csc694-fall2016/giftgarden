<% provide(:title, "Find A Donor") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class="page-header">
  		<h2>Find A Donor</h2>
  	</div>
  </div>
</div>
<div class="row col-xs-offset-2">
  Locate a donor
</div>

<%= form_tag hyper_surf_donors_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Find Donors", :name => nil %>
  </p>
<% end %>

<!--%= will_paginate @donor_search_results %-->
<section id='donor_search'>
<table class="table table-striped table-hover table-bordered table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @donor_search_results.each do |donor| %>
    <tr>
      <td>DON<%= donor.id %></td>
      <td><%= donor.first_name %></td>
      <td><%= donor.last_name %></td>
      <td><%= donor.address %></td>
      <td><%= donor.city %></td>
      <td><%= donor.state %></td>
      <td><%= donor.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</section>
