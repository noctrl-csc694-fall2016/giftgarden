<% provide(:title, "Hyper Surf For A Activity") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class="page-header">
  		<h2>Hyper Surf For A Activity<small>- Select a row to update the New Gift form</small></h2>
  		<div class="row relative-row">
        <div class="text-left">
          <span class="record-count"><%= pluralize(@activity_search_results.count, "result") %> located for the surf term "<%= params[:search] %>".</span>
        </div>
      </div>
  	</div>
  </div>
</div>

<section id='donor_search row'>
  <div class="col-sm-8 col-xs-offset-2">
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
              <span class="glyphicon glyphicon-minus"></span>Filter/Sort Activities
            </a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse">
          <div class="panel-body">  
            <%= form_tag hyper_surf_activities_path, :method => 'get' do %>
                <div class="row form-group">
                  <div class="col-xs-2">
                    <%= text_field_tag :search, params[:search] %>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-xs-2">
                    <%= submit_tag 'Hyper Surf Activities', class: 'btn btn-success' %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
      </div>
      <% if @activity_search_results.count != 0 %>
      <table class="table table-striped table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>End Date</th>
          </tr>
        </thead>
        <tbody>
          <% @activity_search_results.each do |activity| %>
          <tr onclick="javascript:returnActivityValue(<%= activity.id %>)">
            <td>ACT<%= activity.id %></td>
            <td><%= activity.name %></td>
            <td><%= activity.end_date.strftime("%B %d, %Y") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @activity_search_results, :inner_window => 2,  class: "pagination pagination-centered" %>
      <% else %>
      <h3 class="no-records-found">No activities located given your search criteria.</h3>
      <% end %>
    </div>
  </div>
</section>
