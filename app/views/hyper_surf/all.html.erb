<% provide(:title, "HyperSurf") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class="page-header">
  		<h2>HyperSurf Results - <small>search the entire database</small></h2>
  	</div>
  </div>
</div>
<div class="row col-xs-offset-2">
  <div class="col-sm-8">
    <div class="search-query">The search returned the following results for: "<%= params[:term] %>"</div>
    <table class="table table-striped table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <td>Type</td>
            <td>Name</td>
            <td>Description</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Donor</td>
            <td>Unknown Donor</td>
            <td>Things and things</td>
          </tr>
        </tbody>
      </table>
    </div>
</div>