<% provide(:title, "Hyper Surf") %>
<div class="row">
  <div class="col-xs-offset-1 col-sm-10">
  	<div class="page-header">
  		<h2>Hyper Surf
  		  <%= image_tag( random_artwork_icon, height: "64",  alt: "Garden artwork icon", class: "pull-right hidden-xs") %>
  		  <small>
  		    &nbsp; &mdash; quickly search all Activity, Donor and Gift data in The Garden.
  		    Select a row below to surf to that object.
  		  </small>
  		</h2>
  		<div class="row relative-row">
        <div class="text-left">
          <span class="record-count"><%= pluralize(@fullResultSet.count, "result") %> found for term "<%= params[:term] %>".</span>
        </div>
      </div>
  	</div>
  	
  </div>
</div>

<section id='donor_search row'>
  <div class="col-sm-8 col-xs-offset-2">
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
              <span class="glyphicon glyphicon-plus"></span>Filter/Sort Hyper Surf
            </a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse">
          <div class="panel-body">  
            <%= form_tag hyper_surf_all_path, :method => 'get' do %>
                <div class="row form-group">
                  <div class="col-xs-2">
                    <%= text_field_tag :term, params[:term] %>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-xs-2">
                    <%= submit_tag 'Hyper Surf', class: 'btn btn-success' %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <th>Type</th>
            <th>ID</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @fullResultSet.each do |result| %>
          <tr data-link="<%= result[3] %>">
            <td><%= result[0] %></td>
            <td><%= result[1] %></td>
            <td><%= simple_format(result[2]) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
