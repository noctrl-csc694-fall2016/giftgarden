<% provide(:title, "HyperSurf") %>
<div class="row">
  <div class="col-sm-10 col-xs-offset-2">
  	<div class="page-header">
  		<h2>HyperSurf Results - <small>search the entire database</small></h2>
  	</div>
  </div>
</div>
<div class="row col-xs-offset-2">
  <div class="col-sm-8">
    <span class="record-count">The search returned <%= pluralize(1, "result") %> for the following search: "<%= params[:term] %>"</span>
    <table class="table table-striped table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Name</th>
            <th>Match</th>
          </tr>
        </thead>
        <tbody>
          <tr data-link="#">
            <td>DON01</td>
            <td>Donor</td>
            <td>Unknown Donor</td>
            <td>Item</td>
          </tr>
        </tbody>
      </table>
    </div>
</div>