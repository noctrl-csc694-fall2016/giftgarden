<% provide(:title, "Reports") %>
<div class="overlay" id="overlay" style="display:none;"></div>
<div class="row">
  <div class="col-xs-offset-1 col-xs-10">
    <div class="page-header">
      <h2>Reports 
      <%= image_tag("icons/flower3_square.png", height: "64",  alt: "Reports", class: "hidden-xs pull-right") %>
      <small>&nbsp; &mdash; create executive reports quickly and easily. 
      The output of each report is a nicely-formatted PDF file.</small> 
      </h2>
  	</div>
  </div>
</div>
<!-- Content -->
<div class="row">
  <div class="col-xs-offset-1 col-xs-10">
    <h3>Basic Reports</h3>
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10 "><!-- 'activities.pdf' then  -->
    <%= link_to('/report-activities') do %> <%= image_tag("icons/flower7_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">Activities</span><% end %>
    <span class="report-description">- Donors and Gifts for an Activity</span>
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10">
    <%= link_to('/report-donors') do %><%= image_tag("icons/flower1_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">Donors</span><% end %>
    <span class="report-description">- all Donors within a timeframe</span>
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10"> 
    <%= link_to('/report-gifts') do %><%= image_tag("icons/butterfly2_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">Gifts</span><% end %>
    <span class="report-description">- all Gifts within a timeframe</span> 
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10">
    <%= link_to trashes_path do %><%= image_tag("icons/bee1_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">Trash</span><% end %>
    <span class="report-description"> - deleted Activities, Donors and Gifts</span>
  </div>
</div>

<div class="row reports-spacing">
  <div class="col-xs-offset-1 col-xs-10">
    <h3 style="color:purple">Exotic Reports</h3>
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10">
    <%= link_to('/report-lybunt') do %><%= image_tag("icons/flower5_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">LYBUNT</span><% end %>
    <span class="report-description">- Donors who gave last year but unfortunately not this year</span>
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10">
    <%= link_to('/report-new-donors') do %><%= image_tag("icons/flower2_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">New Donors</span><% end %>
    <span class="report-description">- new Donors and their Gifts within a timeframe</span>
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10">
    <%= link_to('/report-one-donor') do %><%= image_tag("icons/dragonfly1_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">One Donor</span><% end %>
    <span class="report-description">- a detailed profile of a selected Donor</span>
  </div>
</div>

<div class="row report-row">
  <div class="col-xs-offset-1 col-xs-10">
    <%= link_to('/report-inkind_gifts') do %><%= image_tag("icons/flower3_square.png", alt: "Graphic Icon", class: "media-object inline-image report-artwork") %><span class="report-title">In Kind Gifts</span><% end %>
    <span class="report-description">- all in kind Gifts within a timeframe</span>
  </div>
</div>
