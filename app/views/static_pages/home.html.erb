<% provide(:title, "Home") %>
  <div class="row">
    <div class="page-header col-xs-10 col-xs-offset-1">
        <h2>Welcome <small>&nbsp; - tend your nonprofit garden of Activities, Donors and Gifts</small></h2>
    </div>
    <!-- col -->
  </div>
  <!-- row -->
	<div class="row" style="padding-top: 20px;">
		<div class="col-xs-offset-1 col-xs-10 col-sm-5">
			<div class="media">
			  <div class="media-right media-middle">
				  <%=link_to(new_gift_path) do %>
            <%= image_tag("icons/flower1_square.png", alt: "New Gifts", class: "media-object home-artwork") %>
          <% end %>
				</div>
				<div class="media-body" style="padding-left: 10px;">
					<br />
				    <h2 class="media-heading"><%= link_to "New Gifts", new_gift_path %> <br /> <small> Add one or multiple Gifts</small></h2>
				</div>
			</div>   <!-- media -->
		</div>   <!-- col -->

		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-5">
			<div class="media">
			  <div class="media-right media-middle">
				  <%=link_to(reports_path) do %>
				    <%= image_tag("icons/butterfly1_square.png", alt: "Reports", class: "media-object home-artwork") %>
  			  <% end %>
				</div>
				<div class="media-body" style="padding-left: 10px;">
					<br />
				  <h2 class="media-heading"><%= link_to "Reports", reports_path %><br /> <small>Generate nicely-formatted reports</small></h2>
				</div>
			</div>   <!-- media -->
		</div>   <!-- col -->
	</div>   <!-- row -->
  	
	  <!-- row -->
	<div class="row" style="padding-top: 20px;">
		<div class="col-xs-offset-1 col-xs-10 col-sm-5">
			<div class="media">
			  <div class="media-right media-middle">
				  <%=link_to(activities_path + "?utf8=%E2%9C%93&timeframe=All&sortby=&pageby=&commit=GO" ) do %>
            <%= image_tag("icons/dragonfly1_square.png", alt: "New Gifts", class: "media-object home-artwork") %>
          <% end %>
				</div>
				<div class="media-body" style="padding-left: 10px;">
					<br />
				    <h2 class="media-heading"><%= link_to "Surf!",  activities_path + "?utf8=%E2%9C%93&timeframe=All&sortby=&pageby=&commit=GO" %>
				    <br /> <small> View and edit information online</small></h2>
				</div>
			</div>   <!-- media -->
		</div>   <!-- col -->

		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-5">
			<div class="media">
			  <div class="media-right media-middle">
				  <%=link_to(import_export_path) do %>
				    <%= image_tag("icons/ladybug1_square.png", alt: "Reports", class: "media-object home-artwork") %>
				  <% end %>
				</div>
				<div class="media-body" style="padding-left: 10px;">
					<br />
				  <h2 class="media-heading"><%= link_to "Import/Export", import_export_path %> <br /> <small>Transfer data in/out of Gift Garden</small></h2>
				</div>
			</div>   <!-- media -->
		</div>   <!-- col -->
	</div>   <!-- row -->
	
	<script>
			$(document).ready(function(){
    			$(".alert.alert-info").css("width", "70%");
			});
	</script>
